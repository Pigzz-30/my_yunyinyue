.videoContainer .header{
  display: flex;
  padding: 10rpx;
}

.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search{
  border: 1px solid #eee;
  border-radius: 15rpx;
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color:#de3c33;
}

.navScroll{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
 
}
.navScroll .navContainer{
  height: 60rpx;
  box-sizing: border-box;
}
.navItem .active{
  border-bottom: 1px solid #de3c33;
}

.videoItem{
  padding: 0 3%;
}
.videoScroll {
  padding-top: 10rpx;
  height: calc(100vh - 152rpx);
}
.videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem image{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}